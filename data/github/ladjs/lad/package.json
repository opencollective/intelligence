{
  "name": "lad",
  "description": "Lad scaffolds a Koa webapp and API framework for Node.js",
  "version": "0.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "bin": "cli.js",
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.js"
    ]
  },
  "prettier": {
    "parser": "babylon",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  },
  "bugs": {
    "url": "https://github.com/ladjs/lad/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)"
  ],
  "dependencies": {
    "cac": "^4.2.4",
    "camelcase": "^4.1.0",
    "github-username-regex": "^1.0.0",
    "is-email": "^1.0.0",
    "is-url": "^1.2.2",
    "is-valid-npm-name": "^0.0.4",
    "npm-conf": "^1.1.3",
    "sao": "^0.22.10",
    "semver": "^5.4.1",
    "speakingurl": "^14.0.1",
    "superb": "^2.0.0",
    "update-notifier": "^2.3.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nyc": "^11.3.0",
    "prettier": "^1.9.2",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.7",
    "supertest": "^3.0.0",
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "homepage": "https://github.com/ladjs/lad",
  "keywords": [
    "ava",
    "boilerplate",
    "codecov",
    "es6",
    "es7",
    "flavored",
    "generator",
    "gfm",
    "github",
    "lad",
    "license",
    "license-generator",
    "markdown",
    "module",
    "np",
    "npm",
    "nyc",
    "package",
    "prettier",
    "project",
    "remark",
    "sao",
    "scaffold",
    "spdx",
    "starter",
    "xo",
    "yeoman"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "git add"
    ],
    "*.md,!test/snapshots/**/*.md,!template/test/snapshots/**/*.md,!template/test/**/*snapshots/**/*.md,!template/README.md,!template/locales/README.md": [
      "remark . -qfo"
    ]
  },
  "main": "sao.js",
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/lad"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage && cd template && npm run test",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off",
      "ava/no-ignored-test-files": "off"
    },
    "space": true,
    "ignores": [
      "config.js"
    ],
    "overrides": [
      {
        "plugins": [
          "prettier",
          "compat"
        ],
        "settings": {
          "polyfills": [
            "fetch"
          ]
        },
        "parserOptions": {
          "sourceType": "script"
        },
        "files": "template/assets/js/**/*.js",
        "envs": [
          "browser"
        ],
        "rules": {
          "compat/compat": "error"
        }
      }
    ]
  }
}
